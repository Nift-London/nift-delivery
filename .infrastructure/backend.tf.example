provider "aws" {
  region = "eu-west-2"
  default_tags {
    tags = {
      Service    = "Nift"
      managed_by = "Terraform"
    }
  }
}

terraform {
  required_version = ">= 1.1.7"
  experiments      = [module_variable_optional_attrs]
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 4.0"
    }
  }
  backend "s3" {
    region = "eu-west-2"
    bucket = "tfstate-235530087925"
    key    = "staging/nift.tfstate"
  }
}

